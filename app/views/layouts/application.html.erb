  <!-- Add your site or application content here -->
      <div class="container well">
        <% if !session[:user_id].nil? %>
          <%= render :partial => "room/roommenu" %> 
        <% end %>

        <div class="flash">
          <% if flash[:notice] %>
              <div class="alert alert-notice">
                <%= flash[:notice] %>
              </div>
          <% end %>

          <% if flash[:error] %>
            <%= render :partial => "home/flash_error" %>
          <% end %>
        </div>

        <%= yield %>
      </div>
    <!-- content end -->


  <% if Rails.env.production? %>
